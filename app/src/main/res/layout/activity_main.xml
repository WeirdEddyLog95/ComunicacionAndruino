<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.edgar_rangel.comarduinorc.MainActivity">

    <Button
        android:id="@+id/Arriba"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:text="Arriba"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="140dp"
        />

    <Button
        android:id="@+id/Abajo"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:text="Abajo"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="140dp"
        />

    <Button
        android:id="@+id/Izq"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:text="Izquierda"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="30dp"
        />

    <Button
        android:id="@+id/Der"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:text="Derecha"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="247dp"
        />

    <Button
        android:id="@+id/btnOnLed"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:text="Encender Coche"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:id="@+id/btnOffLed"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:text="Apagar Coche"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="150dp"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="20dp"
        android:textSize="23dp"
        android:text="Representacion Visual" />

    <Button
        android:id="@+id/btnCMBLayout"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:text="Configurar Bluetooth"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="20dp"
        />

    <ImageView
        android:id="@+id/cocheIMG"
        android:layout_width="130dp"
        android:layout_height="95dp"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="125dp"
        />

</RelativeLayout>
